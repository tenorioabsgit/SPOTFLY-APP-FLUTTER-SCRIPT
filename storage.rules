rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Spotfly copyleft audio (uploaded by Admin SDK)
    match /spotfly-audio/{trackFile} {
      allow read: if request.auth != null;
    }

    // Spotfly copyleft artwork (uploaded by Admin SDK)
    match /spotfly-artwork/{trackFile} {
      allow read: if request.auth != null;
    }

    // Music files - users can upload/read their own
    match /music/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 50 * 1024 * 1024  // max 50MB
        && request.resource.contentType.matches('audio/.*');
    }

    // Cover images - users can upload/read their own
    match /covers/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // max 5MB
        && request.resource.contentType.matches('image/.*');
    }
  }
}
